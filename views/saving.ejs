<div class="container mt-5">
  <h1 class="text-center">Mis Metas de Ahorro</h1>

  <form id="goalForm">
    <label for="goalName">Objetivo de tu ahorro:</label>
    <input type="text" id="goalName" required>
    
    <label for="goalAmount">Monto Objetivo:</label>
    <input type="number" id="goalAmount" required>
    
    <label for="savedAmount">Monto Ahorrado:</label>
    <input type="number" id="savedAmount" required>
    
    <label for="color">Asigna un color a tu ahorro:</label>
    <select id="color" required>
      <option value="#ff6347">Rojo</option>
      <option value="#4682b4">Azul</option>
      <option value="#32cd32">Verde</option>
      <option value="#ffeb00">Amarillo</option>
      <option value="#6c4e31">Marron</option>
    </select>
    
    <button type="submit">Agregar Ahorro</button>
  </form>

  <ul id="goalList"></ul>
</div>
  
  <script>
document.addEventListener('DOMContentLoaded', function () {
  const form = document.getElementById('goalForm');
  const goalList = document.getElementById('goalList');

  form.addEventListener('submit', function (event) {
    event.preventDefault();

    const goalName = document.getElementById('goalName').value;
    const goalAmount = parseFloat(document.getElementById('goalAmount').value);
    const savedAmount = parseFloat(document.getElementById('savedAmount').value);
    const color = document.getElementById('color').value;

    addGoal(goalName, goalAmount, savedAmount, color);
    form.reset();
  });

  function addGoal(name, totalAmount, currentAmount, color) {
    const goalItem = document.createElement('li');
    goalItem.classList.add('goal-item');

    const percentage = Math.min((currentAmount / totalAmount) * 100, 100).toFixed(2);

    goalItem.innerHTML = `
      <h3>${name}</h3>
      <p>Meta: $${totalAmount.toFixed(2)} - Ahorrado: $<span class="saved-amount">${currentAmount.toFixed(2)}</span></p>
      <div class="progress-bar">
      <div class="progress" style="width: ${percentage}%; background-color: ${color};"></div>
      </div>
      <div class="progress-text">${percentage}%</div>
      <button class="add-amount">Agregar Ahorro</button>
      <button class="edit">Editar</button>
      <button class="delete">Eliminar</button>
    `;

    goalList.appendChild(goalItem);

    const addAmountButton = goalItem.querySelector('.add-amount');
    const editButton = goalItem.querySelector('.edit');
    const deleteButton = goalItem.querySelector('.delete');

    addAmountButton.addEventListener('click', function () {
      const additionalAmount = parseFloat(prompt('¿Cuánto dinero deseas agregar a tu ahorro?'));
      if (!isNaN(additionalAmount) && additionalAmount > 0) {
        currentAmount += additionalAmount;
        updateGoal(goalItem, currentAmount, totalAmount, color);
      }
    });

    editButton.addEventListener('click', function () {
      const newName = prompt('Editar nombre de la meta:', name);
      if (newName) {
        name = newName;
        goalItem.querySelector('h3').textContent = name;
      }
    });

    deleteButton.addEventListener('click', function () {
      goalItem.remove();
    });
  }

  function updateGoal(goalItem, currentAmount, totalAmount, color) {
    const percentage = Math.min((currentAmount / totalAmount) * 100, 100).toFixed(2);

    goalItem.querySelector('.saved-amount').textContent = currentAmount.toFixed(2);
    goalItem.querySelector('.progress').style.width = `${percentage}%`;
    goalItem.querySelector('.progress-text').textContent = `${percentage}%`;
  }
});
</script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
      const darkModeBtn = document.getElementById('darkModeBtn');
      const body = document.body;
  
      darkModeBtn.addEventListener('click', () => {
          body.classList.toggle('dark-mode');
          darkModeBtn.textContent = body.classList.contains('dark-mode') ? 'Modo Claro' : 'Modo Oscuro';
      });
  });
  </script>
